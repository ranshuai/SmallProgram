@import "../templates/templates.wxss";
page{
  background: #f5f5f5;
}
.store_item_warp {
  display: flex;
  /* justify-content: space-around; */
  flex-wrap: wrap;
  justify-content: space-between;
  
}

.store_item image {
  width: 100%;
  height: 338rpx;
}

.store_item {
  margin: 5px 0;
  width: 48.9%;
  display: flex;
  flex-direction: column;
  color:#a3a3a3;
  font-size: 12px;
  line-height: 20px;
  background: #fff;
  box-shadow: 0 0 10px 2.5px #e1e1e1;
  text-indent: 4px;
  border-radius: 10rpx;
  overflow: hidden;
}
.store_item >span{
  text-indent: 7px;
}
.store_item >span:last-child{
  text-indent:0;
}