<form bindsubmit="submitForm">
  <view class="release_detail_ul">
    <view class="release_detail_ul_item">
      <span class="l">标题</span>
      <input value="{{ form.releaseLocalTitle }}" name='releaseLocalTitle' placeholder='请输入标题' />
    </view>
    <view class="release_detail_ul_item">
      <span class="l">描述</span>
      <textarea bindblur="bindTextAreaBlur" auto-height placeholder="需要补充的说明" />
      <view class="picture">
        
        <view catchtap="openChooseImage">
          <span class="ion-ios-icon-gxk-19"></span>
           <span>
            上传图片(最多3张)
          </span>
        </view>
         <view wx:for='{{successImageNew}}'> 
          <image src="{{successImageNew[index]}}"></image>
        </view> 
        <view>
         
        </view>
      </view>
    </view>
    <view class="release_detail_ul_item">
      <span class="l">联系人</span>
      <input value="{{ form.releasePersonName }}" name='releasePersonName' placeholder='请输入联系人' />
    </view>
    <view class="release_detail_ul_item">
      <span class="l">电话</span>
      <input value="{{ form.releasePersonMobile }}" name='releasePersonMobile' placeholder='请输入电话' />
    </view>
  </view>
  <button class="_submit" disabled="{{false}}" formType="submit"> 发布 </button>
</form>