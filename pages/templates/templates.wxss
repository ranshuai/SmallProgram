.cart_template {
  z-index: 10;
  position: fixed;
  bottom: 140rpx;
  right: 30rpx;
  width: 88rpx;
  height: 88rpx;
  line-height: 44px;
  border: 1px solid #e7e9eb;
  border-radius: 50%;
  background: #fff;
  text-align: center;
  -webkit-box-shadow: 0 0 5px 1px #e1e1e1;
  box-shadow: 0 0 5px 1px #e1e1e1;
}

.ion-ios-icon-gxk-56 {
  font-size: 25px;
}

.cart_template span {
  position: absolute;
  top: 6%;
  right: 6px;
  height: auto;
  border-radius: 10px;
  background: #ff0a0a;
  color: #fff;
  line-height: 10px;
  text-align: center;
  font-size: 12px;
  padding: 1px 4px;
  font-weight: bold;
}

