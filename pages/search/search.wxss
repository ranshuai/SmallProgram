.header {
  background: #509ad2;
  padding: 36rpx 0 10rpx 0;
}

.header .search {
  width: 90%;
  margin: 0 auto;
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  background: #fff;
  border-radius: 6px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.header .search text {
  color: #509ad2;
  font-size: 14px;
}

.header .search input {
  font-size: 12px;
  width: 70%;
}

.info_ul {
  font-size: 14px;
  color: #333;
  margin: 18rpx 0;
  height: 845rpx;
}

.info_ul .a3a3a3 {
  color: #a3a3a3;
}

.info_ul .info_ul_item {
  padding: 24rpx;
  display: flex;
  border-bottom: 1px solid #e6e8ea;
}

.info_ul .info_ul_item .stor_type {
  padding-bottom: 8rpx;
}
.info_ul .info_ul_item .store_con {
  display: flex;
  justify-content: space-between;
  align-items: center;

}
.info_ul .info_ul_item .store_con button{
  margin: 0;
  font-size: 12px;
  background: #fff;
  border: 1px solid  #f2786b;
  color: #f2786b;
}

.info_ul .info_ul_item > view:first-child {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 40rpx;
}

.info_ul .info_ul_item > view:first-child image {
  width: 100%;
  height: 100%;
}

.info_ul .info_ul_item > view:last-child {
  width: 80%;
}

