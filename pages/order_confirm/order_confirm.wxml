<!-- 没选中地址  -->
<view wx:if="{{!addressInfo}}" class="user_address pr" catchtap='goToAddress'>
  <span class="font_14 color_333">添加地址</span>
  <span class="ion-ios-icon-gxk-51 pa "></span>
</view>
<view wx:if="{{addressInfo}}" class="user_address pr" catchtap='goToAddress'>
  <!-- 选中的地址  -->
  <span class="font_14 color_333">{{addressInfo.consignee}} {{addressInfo.mobile}}</span>
  <span class="font_12 color_a3a3a3">{{addressInfo.address}}</span>
  <span class="ion-ios-icon-gxk-51 pa "></span>
</view>
