<!-- 确认付款 S -->
<view class="confirm_btn_warp">
  <view class="font_16 p_l_24">
    应付金额：
    <span class="f2786b">¥{{orderTotal}}</span>
  </view>
  <button class="font_16" catchtap='goToOrderPay'>
    确认并付款
  </button>
</view>
