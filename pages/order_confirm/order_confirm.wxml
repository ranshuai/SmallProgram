<!--商品信息 S  -->
<view class="goods_info">
  <view wx:for="{{orderConfirmInfo}}" wx:key wx:for-index="index">
    <view class="store_name font_14 color_333">
      店铺：{{item[1][0].storeName}}
    </view>
    <view class="goods_info_cont" wx:for="{{item[1]}}">
      <image src="{{item.goodsImg}}"></image>
      <view class="goods_info_cont_r">
        <span class="font_14 color_333 goods_info_cont_r_title">
          {{item.goodsName}}
          <span> x{{item.goodsNum}}</span>
        </span>
        <span class="font_12 color_a3a3a3">
          商品属性:{{item.goodsSpecs}}
        </span>
        <span class="font_12 color_a3a3a3">
          ¥{{item.shopPrice}}
        </span>
      </view>
    </view>
    <view class="goods_info_remarks font_14 color_333">
      买家备注：
      <input bindinput="bindinput" data-remarkIndex='{{index}}' type='text' placeholder='(选填) 请填写对商家的留言信息'></input>
    </view>

    <view class="goods_info_remarks font_14 color_333">
      配送方式：
      <span> 送货上门</span>
    </view>
  </view>

  <!-- <view class="goods_info_remarks font_14 color_333">
    运费：
    <span> ¥1.00</span>
  </view> -->
  <!-- <view class="goods_info_remarks font_14 color_333">
    商品合计：
    <span> ¥{{orderTotal}}</span>
  </view> -->
</view>
