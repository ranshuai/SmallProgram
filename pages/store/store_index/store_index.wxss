page {
  height: 100%;
}

.store_detail {
  position: relative;
  height: 100%;
}

.store_bg {
  height: 400rpx;
  margin-bottom: 180rpx;
}

.store_bg image {
  width: 100%;
  height: 100%;
}

.store_info {
  position: absolute;
  left: 0;
  top: 332rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.store_info span {
  color: #a3a3a3;
  font-size: 12px;
  line-height: 20px;
}

.store_info image {
  width: 136rpx;
  height: 136rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}

.store_collector {
  display: flex;
  justify-content: space-around;
  margin-bottom: 50rpx;
}

.store_collector button {
  margin: 0;
  color: #a3a3a3;
  font-size: 12px;
  background: #fff;
  padding: 0 100rpx;
}

.store_ul {
  padding: 0 12px;
}

.new_user_ul_warp {
  padding: 0 24rpx;
  height: 45%;
  background: #e6e8ea;
  overflow: hidden;
}

.new_user_ul {
  background: #fff;
  border-radius: 10rpx;
  padding: 0 24rpx;
  margin: 40rpx 0;
}

.new_user_ul .new_user_ul_item {
  color: #333;
  font-size: 14px;
  padding: 24rpx 0;
  border-bottom: 1px solid #e6e8ea;
}

.new_user_ul .new_user_ul_item > i {
  margin-right: 6rpx;
}

.new_user_ul .new_user_ul_item:last-child {
  border: 0;
}
