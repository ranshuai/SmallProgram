<view class="page gray_bg pr p_b_40">
  <view class="p_0_24 title line_h_30">
    <i class="ion-ios-icon-gxk-175 font_12 c_f2786b"></i>
    <span class="font_12 color_a3a3a3 m_left_20">商品图片</span>
  </view>
  <view class="add2_images">
    <swiper indicator-color="#fff" indicator-dots= "true" indicator-color="rgba(0, 0, 0, .3)" indicator-active-color="#fff"  interval='2000' circular="true" vertical="">
      <swiper-item wx:for="{{successImageNew}}" wx:key>
        <image src="{{successImageNew[index]+'?x-oss-process=image/resize,m_fixed,h_750,w_750'}}">
        </image>
      </swiper-item>
    </swiper>
  </view>
  <view class="p_40_24">
    <view class="picture" catchtap="openChooseImage">
      <span class="ion-ios-icon-gxk-19"></span>
      <span class="color_a3a3a3">
        上传图片(最多3张)
      </span>
    </view>
  </view>
  <view class="font_12 color_a3a3a3 p_0_24">
    <span>
      注：图片尺寸750*750像素，建议每张图片不大于2M，最多可添加6张图片。
    </span>
  </view>
   <button class="_submit pa" disabled="{{false}}"  catchtap='saveGoods'>发布 </button>
</view>
